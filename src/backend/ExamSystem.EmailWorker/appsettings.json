{
  "Logging": {
    "LogLevel": {
      "Default": "Information"
    }
  },
  "SerilogEmailSinkOptions": {
    "EmailFrom": "",
    "EmailTo": "",
    "EmailSubject": "",
    "SmtpHost": "",
    "SmtpPort": 0,
    "SmtpUsername": "",
    "SmtpPassword": "",
    "MinimumLogLevel": "Error"
  },
  "ConnectionStrings": {
    "ExamSystemDb": ""
  },
  "Serilog": {
    "Using": [
      "Serilog",
      "Serilog.Sinks.File",
      "Serilog.Sinks.MSSqlServer"
    ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "ExamSystemDb",
          "sinkOptionsSection": {
            "tableName": "Logs"
          },
          "restrictedToMinimumLevel": "Error"
        }
      },
      {
        "Name": "File",
        "Args": {
          "restrictedToMinimumLevel": "Information",
          "path": "Logs/web-log-.log",
          "rollingInterval": "Day"
        }
      }
    ]
  }
}
